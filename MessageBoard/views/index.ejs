    <style media="screen">
      .message{
        border:2px solid black;
        display:inline-block;
        background-color:yellow;
        padding:20px;

      }
    </style>
  </head>
  <body>
    <h1> The Dojo Message Board </h1>
    <hr>

    <form id = 'myForm' action="/" method="post">
      <% if(typeof(errors) != 'undefined' ) { %>
      <% for (var x in errors) { %>
       <h3><%= errors[x].message %></h3>
      <% } %>
  <% } %>

        Name: <input type = "text" name = "name">  <% if(typeof(errors) != 'undefined' ) { %> <%= errors["name"].message %><% } %>
        <br>
        Message: <textarea name="message" rows="8" cols="80"></textarea> <% if(typeof(errors) != 'undefined' ) { %> <%= errors["text"].message %><% } %>
        <br>
        <input type = "submit" vlaue = "Post Message">

    </form>
    <h1> Posts </h1>

    <hr>

    <% for (var i = 0; i < key.length; i++){ %>
      <div id='<%=key[i].id %>'>



      <%=key[i].id %>
      <p>name: <%= key[i].name %> </p>
      <p> Message: <%= key[i].text %> </p>

      <% for (var j = 0; j < key[i].comments.length; j++){ %>

        <div class = "message">
        <h4> name: <%= key[i].comments[j].name  %></h4>
        <h4> comment:  <%= key[i].comments[j].text  %> </h4>
      </div>
        <% } %>
      <form class="" action="/add_comment/<%= key[i].id %>" method="post">
        <p> name: <input type = "text" name = "name"> </p>
        <p> Comment: <input type = "text" name = "comment"> </p>
        <input class = "submit" type = "submit" value = "post a comment">
      </form>
      <hr>
        </div>
      <% } %>


  </body>
